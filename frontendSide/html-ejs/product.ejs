<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="stylesheet" type="text/css" href="css/style.css" />
		<title>MrFox Styles | <%= title %></title>

		<!-- icon -->
		<link
			rel="icon"
			href="img/header/favicon.ico"
			type="image/x-icon"
			sizes="32x32"
		/>
	</head>
	<!-- Отображаемое тело страницы -->
	<body>
		<div class="wrapper">
			<%- include('./partials/header.ejs') %>
			<main class="mainPage">
				<section class="mainPage__card card">
					<div class="card__container">
						<div class="card__title">Koszyk</div>
						<div class="card__numberItem">
							<span class="quantityBag">0</span>
							produkty/-ow
						</div>
						<div class="card__subtitle">Dodano do koszyka</div>
						<div class="card__body">
							<div class="card__items">
								<ul class="card__list"></ul>
							</div>
							<div class="card__total">
								<div class="card__totalPrice">
									<span>Suma:</span>
									<span class="suma">0 zl</span>
								</div>
								<div class="card__buttons">
									<button class="close-bag" type="button">
										Kontynuuj Zakupy
									</button>
									<button
										onclick="location.href='review'"
										class="review-order"
										type="button"
									>
										Zobacz Zawartos Koszyka
									</button>
								</div>
							</div>
						</div>
					</div>
				</section>
				<section class="mainPage__shop shop">
					<div class="shop__container _container">
						<div class="about__title title also__title">Nowości</div>
						<div class="shop__rawbest"></div>
					</div>
				</section>
				<section class="mainPage__subscribe subscribe">
					<div class="subscribe__container _container">
						<div class="subscribe__body">
							<h4 class="subscribe__title">
								Zapisz się, aby otrzymać 10% rabatu na pierwsze zamówienie
							</h4>
							<form action="#" class="subscribe__form">
								<input
									autocomplete="off"
									type="email"
									required
									name="form[]"
									placeholder="Your Email"
									class="subscribe__input"
								/>
								<button type="submit" class="subscribe__button">
									Subskrybuj
								</button>
							</form>
						</div>
					</div>
				</section>
				<section class="mainPage__shop shop">
					<div class="shop__container">
						<div class="about__title title top__title">Bestsellery</div>
						<div class="shop__rawbest shop__rawbest_2"></div>
					</div>
				</section>
				<section class="mainPage__shop shop">
					<div class="shop__container">
						<div id="stara" class="about__title title top__title">
							Stara kolekcja
						</div>
						<div class="shop__rawbest shop__rawbest_3"></div>
					</div>
				</section>
			</main>
			<%- include('./partials/footer.ejs') %>
		</div>
		<!-- Подключаем jquery -->
		<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
		<script src="slick/slick.min.js"></script>
		<script
			type="module"
			src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
		></script>
		<script
			nomodule
			src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
		></script>
		<!-- Подключаем скрипты -->
		<script src="js/script.js"></script>
		<script src="js/scriptshop.js"></script>
		<script src="js/shopitem.js"></script>
		<script src="js/review.js"></script>
	</body>
</html>
